@import utils
@import nib

#page_cont
  border-top 10px solid #333

#page
  width 980px
  margin 0 auto

#header
  margin-top -10px
  height 485px
  background: url(../img/banner/1.jpg) no-repeat 98% 35px
  position relative

  .logo
    background url(../img/logo.png)
    width 210px
    height 60px
    left 145px
    top 35px
    position absolute

  .left_bar
    position absolute
    top 0px
    left 0px
    width 140px
    background url(../img/menu1_bg_mid.png)
    background-size 100% auto
    

    .contents
      min-height 382px
      height auto !important
      height 382px
      background url(../img/menu1_bg_top.png) no-repeat
      background-size 100% auto
      padding-top 25px
      -webkit-transition: background-color 0.8s

      .small_logo
        display block
        width 108px
        height 78px
        margin 0px auto 10px
        background url(../img/logo_small.png) no-repeat

      .menu1_cont
        clear both

    .bottom
      height 19px
      background #FFF url(../img/menu1_bg_bot.png)
      background-size 100% auto




#main
  height auto !important
  height 200px
  min-height 200px
  margin-top -20px
  padding-bottom 35px
  position relative

  #article
    font-family Arial
    font-size 14px
    line-height 135%
    color #555
    padding-right 20px
    padding-left 5px
    img
      border-radius 8px

#footer_cont
  background #000
  padding 20px 0 40px

#footer
  width 960px
  margin 0 auto
  color #fff
  
  .contacts
    float left
    width 400px
    font-family Tahoma
    
    .name
      font-size: 16px
      padding-bottom: 10px
    .address
      font-size: 12px
      line-height 145%
      color #aaa
        
.fp_gr_list
  padding-top 15px
  
  .gr_item
    float left
    width 230px
    background-repeat no-repeat
    margin-right 8px
    height 130px
    position: relative
    border-radius 5px
    cursor pointer
    .name
      width: 150px
      height 90px
      padding 25px 15px
      box-sizing border-box
      color #b61912
      text-transform uppercase
      font-weight bold
      font-size 14px
      font-family Arial
      overflow hidden
        
    .more
      position absolute
      bottom 8px
      left 15px
      color #fff
      text-decoration underline
      font-size 13px
      font-weight bold
        
    &:hover
      .more
        text-decoration none


#sponsor_info
  padding-top 5px
  
  .txt
    float left
    width 460px
      
  .img_cont
    float left
    width 480px
    
  .img
    width 225px
    height 130px
    float left
    margin-left: 15px
    border-radius 8px
    margin-bottom 13px
    .inner
      width 100%
      height 100%
      background #ccc
      opacity 0.7
      border-radius 8px
      transition opacity 0.5s
      
    &:hover .inner
      opacity 0

