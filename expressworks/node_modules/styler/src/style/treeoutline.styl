@import nib
@import util

.elements-outline
  display flex
  flex-direction column
  flex 1
  min-height 220px
  margin 0 0 4px 0
  padding 2px 2px 2px4px
  outline none
  border-radius 0px 0px 3px 3px
  background #fff

  > .subtree-heading
    display flex
    flex-direction row
    overflow hidden
    visibility hidden
    height 0px
    margin-bottom 2px
    margin-right 3px
    border-radius 3px
    cursor default
    transition height .3s
    background #eee
    
    &.is-visible
      height 18px
      visibility visible
    
    > .clear-subtree-btn
      content ""
      padding 0px 5px
      cursor pointer
      background url(../img/icons.png) no-repeat 0px -553px
      retina()
      margin-right 3px
      transform rotate(-90deg)
      &:hover
        opacity .7
    
    > .element-name
      padding 2px 4px
      font-size 13px
      font-weight bold
      
  > .scroller-container
    display flex
    flex-direction column
    flex 1
    overflow hidden
    
  .scroller
    flex 1
    overflow-y auto
    overflow-x hidden
    
    > .items-container
      overflow hidden
      position relative
      
      > .items
        overflow hidden
        position absolute
        width 100%
        background #fff

.outline-item
  overflow hidden
  box-sizing border-box
  height 20px
  margin 0 2px 0 inherit
  padding 2px
  border-radius 3px
  font-family $monospace_family
  font-size 11px
  white-space nowrap
    
  > .text
    margin-left 3px
    color #999

    &:first-child
      margin-left 10px

  &.is-highlighted
    border-right 4px solid #abd

  &:hover
    position relative
    background #f4f4f4
    cursor default

  &.is-selected
    background: #cdf

  > .fold-btn-blank
    float left
    width 12px
    height 12px
    margin 1px

  > .fold-btn
    @extends .outline-item > .fold-btn-blank
    background url(../img/icons.png) 3px -539px
    retina()
    transform rotate(90deg)
    
  &.is-folded > .fold-btn
    transform rotate(0)

  > .pseudos
    margin-right 2px
    > .pseudo-indicator
      display inline-block
      margin-top -2px
      padding-top 2px

  > .select-subtree-btn
    absolute top 4px right 0
    width 12px
    height 12px
    margin-right 5px
    cursor pointer
    visibility hidden
    background url(../img/icons.png) no-repeat 0px -560px
    retina()
  
  &:hover > .select-subtree-btn
    visibility visible

