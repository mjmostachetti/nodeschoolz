@import nib

.imagepreview
  top -3000px
  text-align center
  
  .is_loaded > &
    top 50px
  
  .image
    background url(../img/transparent_grid.png)
    margin auto
    width 10px
    height 10px
    border 5px solid rgba(255,255,255,.7)
    
    .inner
      width 100%
      height 100%
      background-size 100% 100%
    
  .imginfo
    background #fff
    margin-top 20px
    padding 5px 15px
    display inline-block
    box-sizing border-box
    
    .name
      font-weight bold
      padding-bottom 5px
      
    .size
      color #666


    