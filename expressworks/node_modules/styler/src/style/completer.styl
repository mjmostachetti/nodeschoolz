@import "nib"

.completer
  position absolute
  z-index 100
  padding 2px

  > .items
    max-height 96px
    white-space nowrap
    background-color #cbd9f6
    overflow-y auto
    overflow-x hidden
    color: #333
    min-width 200px
    border-radius 3px

    > .item      
      padding 0 2px
      > .general
        color #7a7a7a
      
      &:hover
        background: rgb(250,235,250)
        cursor pointer
      &.selected
        background #96b2fb
      
      &.color
        padding-left 2px
        border-left-width 15px
        border-left-style solid
  
  > .preview
    display none
    absolute top 0 right 100%
    width 130px
    height 98px
    background #e9f1f8
    
    .imagepreview
      height 80px
      
    .image
      position relative
      margin auto
      top 5%
    
    .inner
      position relative
      width 100%
      height 100%
      background-size 100%
    
    .imginfo
      position absolute
      top 80px
      width 100%
      
      .name
        display none
      .size
        text-align center
        color #999
      
  &.is-reverse > .preview
    top auto
    bottom 0px

